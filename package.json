{
  "name": "cook-share",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.4.1",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "eslint .",
    "docker:build": "docker build --build-arg DATABASE_URL=$DATABASE_URL -t cook-share .",
    "docker:run": "docker run --env-file .env -p 3000:3000 cook-share",
    "pretty": "pnpm dlx prettier --write .",
    "db:open": "pnpm exec prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "db:seed:ingredients": "tsx prisma/seed/ingredients.ts",
    "db:clear": "tsx prisma/clear.ts",
    "predb:seed": "pnpm run db:clear"
  },
  "dependencies": {
    "@formatjs/intl-localematcher": "^0.8.1",
    "@hookform/resolvers": "^5.2.2",
    "@prisma/adapter-pg": "^7.4.1",
    "@prisma/client": "^7.4.0",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-toast": "^1.2.15",
    "bcrypt": "^6.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "jose": "^6.1.3",
    "lucide-react": "^0.574.0",
    "negotiator": "^1.0.0",
    "next": "16.1.6",
    "pg": "^8.18.0",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "react-hook-form": "^7.71.1",
    "tailwind-merge": "^3.4.1",
    "tw-animate-css": "^1.4.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.3.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/bcrypt": "^6.0.0",
    "@types/negotiator": "^0.6.4",
    "@types/node": "^25.2.3",
    "@types/pg": "^8.16.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "dotenv": "^17.3.1",
    "eslint": "^9.39.2",
    "eslint-config-next": "16.1.6",
    "postcss": "^8.5.6",
    "prisma": "^7.4.0",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.19.0",
    "typescript": "^5.9.3"
  }
}
